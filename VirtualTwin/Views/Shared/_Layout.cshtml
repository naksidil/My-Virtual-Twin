<!DOCTYPE html>
<html lang="en">
<head>
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			const theme = localStorage.getItem("theme");
			if (theme === "darkMode") {
				document.body.classList.remove("lightMode");
				document.body.classList.add("darkMode");
			} else {
				document.body.classList.remove("darkMode");
				document.body.classList.add("lightMode");
			}
		});
	</script>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Panel</title>
	<!--  Select 2 -->
	<link href="~/lib/select2/select2.min.css" rel="stylesheet" />
	<!--  Fontawesome -->
	<link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
	<!--  Datatable -->
	<link href="~/lib/datatable/jquery.datatables.min.css" rel="stylesheet" />
	<!--  General Css -->
	<link href="~/css/general.css" rel="stylesheet" />
	@await RenderSectionAsync("Styles", required: false)
</head>
<body class="lightMode">

	<div id="SpinnerContainer">
		<div></div>
	</div>
	<div id="Bar">
		<i class="fa-solid fa-bars-staggered"></i>
		<img src="~/img/logo.png" />
	</div>
	<aside>
		<img src="~/img/dronex_logo.png" />

		<div class="container">
			<b>ANA <span></span></b>
			<ul>
				<li>
					<a href="/">
						<i class="fa-solid fa-ghost"></i>
						<span>
							Main
						</span>
					</a>
				</li>
				<li>
					<a href="/editor">
						<i class="fa-solid fa-ghost"></i>
						<span>
							Ghost
						</span>
					</a>
				</li>
			</ul>
		</div>
	</aside>

	<header>
		<div id="Theme">
			<i class="fa-regular fa-moon"></i>
		</div>

		<div id="Notification" class="active">
			<i class="fa-regular fa-bell"></i>
			<div id="NotificationBox">
				<h5>Bildirimler(2) <i class="fa-solid fa-xmark"></i></h5>
				<div>
					@for (int i = 0; i < 2; i++) {
						<a href="#">
							<img src="https://preskool.dreamstechnologies.com/html/template/assets/img/profiles/avatar-25.jpg" />
							<div>
								<p><b>Furkan</b> Rekor Furkan tarafından kırıldı </p><span>1 saat önce</span>
							</div>
						</a>
					}
				</div>
			</div>
		</div>
		<div id="Profile">
			<img src="https://preskool.dreamstechnologies.com/html/template/assets/img/profiles/avatar-27.jpg" />
			<div id="ProfileBox">
				<p>
					<img src="https://preskool.dreamstechnologies.com/html/template/assets/img/profiles/avatar-27.jpg" />
					<span>
						Furkan Mungan<b>Yönetici</b>
					</span>
				</p>
				<a><i class="fa-solid fa-user"></i> Profilim</a>
				<a><i class="fa-solid fa-user"></i> Ayarlar</a>
				<a><i class="fa-solid fa-user"></i> Çıkış Yap</a>
			</div>
		</div>

	</header>

	<main role="main">
		@RenderBody()
	</main>


	<!--  Jquery-->
	<script src="~/lib/jquery-3.7.1.min.js"></script>
	<!--  DataTable-->
	<script src="~/lib/datatable/jquery.datatables.min.js"></script>

	<link href="~/lib/excelprint/buttons.datatables.min.css" rel="stylesheet" />
	<script src="~/lib/excelprint/datatables.buttons.min.js"></script>
	<script src="~/lib/excelprint/jszip.min.js"></script>
	<script src="~/lib/excelprint/buttons.html5.min.js"></script>
	<script src="~/lib/excelprint/buttons.print.min.js"></script>

	<!--  Select 2 -->
	<script src="~/lib/select2/select2.min.js"></script>
	<!--  General JS -->
	<script src="~/js/general.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
